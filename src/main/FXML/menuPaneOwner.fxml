<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="menuPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: violet;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FXML.GUIControl.MenuOwnerController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="220.0" spacing="10.0" style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Owner" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="username" text="USERNAME" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label fx:id="email" text="Email" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#dashboard" styleClass="menu-button-owner" stylesheets="@css/style.css" text="Dashboard" textFill="WHITE">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#facilities" styleClass="menu-button-owner" stylesheets="@css/style.css" text="Facilities list" textFill="WHITE">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#reservations" styleClass="menu-button-owner" stylesheets="@css/style.css" text="Reservations" textFill="WHITE">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#profile" styleClass="menu-button-owner" stylesheets="@css/style.css" text="Profile" textFill="WHITE">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
