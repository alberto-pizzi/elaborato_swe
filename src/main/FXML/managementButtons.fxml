<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="buttonsBox" alignment="CENTER" prefHeight="43.0" prefWidth="140.0" spacing="15.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FXML.GUIControl.ReservationItemController">
   <children>
      <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditButtonAction" prefHeight="35.0" prefWidth="35.0" stylesheets="@css/style.css">
         <styleClass>
            <String fx:value="management-buttons" />
            <String fx:value="edit-button-color" />
         </styleClass>
         <graphic>
            <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/icons/pencil.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButtonAction" prefHeight="35.0" prefWidth="35.0" stylesheets="@css/style.css">
         <styleClass>
            <String fx:value="delete-button-color" />
            <String fx:value="management-buttons" />
         </styleClass>
         <graphic>
            <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/icons/trash.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</HBox>
