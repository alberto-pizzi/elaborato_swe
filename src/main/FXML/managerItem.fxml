<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="userItemBox" prefWidth="1000.0" style="-fx-background-color: white; -fx-border-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FXML.GUIControl.ManagerItemController">
   <children>
      <StackPane prefHeight="120.0" prefWidth="294.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="usernameLabel" prefHeight="40.0" prefWidth="252.0" text="Username" wrapText="true">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="44.0" prefWidth="76.0" text="City:">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="userCityLabel" prefHeight="44.0" prefWidth="195.0" text="User city" textFill="#a1a1a1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </StackPane>
      <StackPane prefHeight="120.0" prefWidth="200.0">
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="150.0">
                     <children>
                        <Label prefHeight="40.0" prefWidth="90.0" text="Province:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="provinceLabel" prefHeight="44.0" prefWidth="81.0" text="TO" textFill="#a1a1a1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
      <StackPane prefHeight="120.0" prefWidth="453.0">
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
         <children>
            <VBox prefHeight="80.0" prefWidth="372.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="80.0" prefWidth="374.0">
                     <children>
                        <Label prefHeight="40.0" prefWidth="56.0" text="Email:">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="emailLabel" prefHeight="40.0" prefWidth="294.0" text="email" textFill="#a1a1a1" wrapText="true">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
      <VBox alignment="CENTER" prefHeight="120.0" prefWidth="180.0">
         <children>
            <Button fx:id="addUser" mnemonicParsing="false" onAction="#handleAddUserButton" styleClass="confirm-button-owner" stylesheets="@css/style.css" text="Add" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets left="20.0" />
   </padding>
</HBox>
